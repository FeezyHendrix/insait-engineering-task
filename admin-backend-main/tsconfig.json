{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "src",
    "typeRoots": ["./src/types", "node_modules/@types"],                
  },
  "exclude": [
    "tests"
  ]
}
